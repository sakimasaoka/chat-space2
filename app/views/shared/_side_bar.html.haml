.sideber
  .sideber__point
    .sideber__point__box
      .sideber__point__box__name
        = current_user.name
      .sideber__point__box__menu
        =link_to new_group_path do
          = icon('fa', 'edit',  class:"icon")
        =link_to edit_user_path(current_user) do
          = icon('fas', 'cog',  class: "icon")
  .sideber__main
    - current_user.groups.each do |group|
      .sideber__main__group
        = link_to group_messages_path(group) do
          %p.sideber__main__group__text
            = group.name
          %p.sideber__main__group__text2
            = group.show_last_message